{#
/**
 * @file
 * Theme override to display a region.
 *
 * Available variables:
 * - content: The content for this region, typically blocks.
 * - attributes: HTML attributes for the region <div>.
 * - region: The name of the region variable as defined in the theme's
 *   .info.yml file.
 *
 * @see template_preprocess_region()
 */
#}
{%
  set classes = [
    'region',
    'region-' ~ region|clean_class,
  ]
%}
{% if content %}
  <div{{ attributes.addClass(classes) }}>
    <div class="header-top">
      {{ content }}
      <div id="social-header">
        <ul class="social-list">
          <li class="social-elem">
            <a class="social-link facebook" href="https://www.facebook.com/AgIDGovIT/" target="_blank">
              <img class="social-image" src="{{ base_url ~ '/' ~ base_path ~ directory }}/dist/images/icons/icon-facebook.svg" alt="Facebook">
            </a>
          </li>
          <li class="social-elem">
            <a class="social-link twitter" href="https://twitter.com/agidgov" target="_blank">
              <img class="social-image" src="{{ base_url ~ '/' ~ base_path ~ directory }}/dist/images/icons/icon-twitter.svg" alt="Twitter">
            </a>
          </li>
          <li class="social-elem">
            <a class="social-link medium" href="https://medium.com/@AgidGov" target="_blank">
              <img class="social-image" src="{{ base_url ~ '/' ~ base_path ~ directory }}/dist/images/icons/icon-medium.svg" alt="Medium">
            </a>
          </li>
        </ul>
      </div>
      <div class="icon-menu-main">
        <img src="{{ base_url ~ '/' ~ base_path ~ directory }}/dist/images/icons/icon-menu-main.svg" alt="Burger main menu">
      </div>
    </div>

    <div class="text-wrapper">
      <h1 class="title">Comunichiamo come comunicare</h1>
      <div class="subtitle">i servizi digitali</div>
    </div>

  </div>
{% endif %}
